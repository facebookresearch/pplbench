{
    "model": {
        "class": "noisy_or_topic.NoisyOrTopic",
        "args": {
            "n": 2,
            "num_topics": 20,
            "num_words": 200,
            "avg_fanout": 10.0
        }
    },
    "num_samples": 2000,
    "trials": 3,
    "ppls": [
        {
            "name": "stan",
            "inference": {
                "class": "inference.MCMC"
            },
            "legend": {
                "color": "blue"
            }
        },
        {
            "name": "pymc3",
            "inference": {
                "class": "inference.MCMC",
                "infer_args": {
                    "algorithm": "BinaryGibbsMetropolis"
                }
            },
            "legend": {
                "color": "green",
                "name": "pymc3-Gibbs"
            }
        },
        {
            "name": "jags",
            "inference": {
                "class": "inference.MCMC"
            },
            "legend": {
                "color": "yellow",
                "name": "jags"
            }
        }
    ],
    "save_samples": true,
    "loglevels": {
        "pystan": "INFO",
        "pplbench": "INFO"
    },
    "figures": {
        "generate_pll": true,
        "suffix": "png"
    }
}
